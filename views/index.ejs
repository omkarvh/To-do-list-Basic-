  <% for (let tsk of allTasks) { %>

   

    <div class="input-group mb-3">

      <!--delete form-->
      <form action="/del" method="post">
      <div class="input-group-text">
        <input class="form-check-input mt-0" onchange="this.form.submit()" type="checkbox" name="delTask" value="<%= tsk.id %>" aria-label="Checkbox for following text input">
      </div>
    </form>
        <h4 id="<% tsk.id %>"><%= tsk.task %></h4>
